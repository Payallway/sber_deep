<!DOCTYPE html>
<html>
<head><meta charset="UTF-8"><title>СБП перевод через Сбер</title></head>
<body>
<script>
  const p = new URLSearchParams(window.location.search);
  const phone = p.get("phone");
  if (!phone) {
    document.body.innerText = "Ошибка: phone? Не указан.";
  } else {
    let url = `sbol://send?phone=${phone}`;
    if (p.get("amount")) url += `&amount=${p.get("amount")}`;
    if (p.get("comment")) url += `&comment=${encodeURIComponent(p.get("comment"))}`;
    window.location.href = url;
    setTimeout(() => document.body.innerHTML = `<p>Если не открылось — <a href="${url}">Нажмите здесь для запуска</a>.</p>`, 2000);
  }
</script>
</body>
</html>
